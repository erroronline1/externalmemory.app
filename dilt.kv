#:kivy 2.0.0

<Screen>:
	camimage: camimage
	detectedcode: detectedcode
	mynotes: mynotes
	good: good
	meh: meh
	bad: bad

	mydata: mydata

	GridLayout:
		cols:1
		size: root.width * .8, root.height
		pos: root.width * .5 - self.width * .5, 0
		Accordion:
			orientation: "vertical"
			AccordionItem:
				title: root.content("diltTitle")
				collapse: False
				GridLayout:
					cols:1
					Image:
						id: camimage
						size_hint: (4, 4)
						allow_stretch: True
						keep_ratio: True
					Label:
						id: detectedcode
						text: root.content("diltDetectedcode")
						size_hint: (.5, .5)
					Label:
						text: root.content("diltMynotes")
						size_hint: (.5, .5)
					TextInput:
						id: mynotes
					ToggleButton:
						id: good
						group: "rating"
						text: root.content("diltGood")
						size_hint: (.5, .5)
					ToggleButton:
						id: meh
						group: "rating"
						text: root.content("diltMeh")
						size_hint: (.5, .5)
					ToggleButton:
						id: bad
						group: "rating"
						text: root.content("diltBad")
						size_hint: (.5, .5)
					Button:
						text: root.content("diltSave")
						size_hint: (.5, .5)
						on_release: root.savefn()
			AccordionItem:
				title: root.content("mydataTitle")
				GridLayout:
